<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.martin.macekinternetofthings.detailsactivity"
    android:background="#d1d1d1"
    android:id="@+id/aut__clayout">



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.martin.macekinternetofthings.detailsactivity"
    android:background="@color/colorBackground"
    app:contentScrim="?attr/colorPrimary">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automatizace   "
        android:id="@+id/aut_sw1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textOff="vyp"
        android:textOn="zap"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:showText="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/aut_perioda"
        android:layout_below="@+id/aut_sw1"
        android:layout_alignEnd="@+id/aut_sw1"
        android:layout_toEndOf="@+id/textView22"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Perioda obnovy"
        android:id="@+id/textView22"
        android:layout_below="@+id/aut_sw1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textAlignment="viewEnd"
        android:layout_marginLeft="30dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Odchylka"
        android:id="@+id/textView25"
        android:textAlignment="viewEnd"
        android:layout_alignTop="@+id/aut_hys"
        android:layout_toStartOf="@+id/aut_perioda"
        android:textColor="#000000" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aut_sw2"
        android:layout_below="@+id/aut_hys"
        android:layout_alignEnd="@+id/aut_sw1"
        android:text="zima"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/aut_hys"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Roční období"
        android:id="@+id/textView26"
        android:layout_alignBottom="@+id/aut_sw2"
        android:layout_alignParentStart="true"
        android:textAlignment="viewEnd"
        android:layout_toStartOf="@+id/aut_perioda"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/aut_hys"
        android:layout_toEndOf="@+id/textView25"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_below="@+id/aut_perioda"
        android:layout_alignEnd="@+id/aut_perioda"
        android:layout_alignStart="@+id/aut_perioda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="minut"
        android:id="@+id/textView27"
        android:layout_alignTop="@+id/textView22"
        android:layout_toEndOf="@+id/aut_perioda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="°C"
        android:id="@+id/textView29"
        android:layout_alignTop="@+id/aut_hys"
        android:layout_toEndOf="@+id/aut_hys" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/aut_kldS"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/textView23"
        android:layout_toStartOf="@+id/textView31"
        android:layout_marginTop="5dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/aut_kldK"
        android:layout_marginRight="70dp"
        android:layout_below="@+id/textView23"
        android:layout_toEndOf="@+id/textView32"
        android:layout_marginTop="5dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Období klidu"
        android:id="@+id/textView23"
        android:layout_below="@+id/aut_sw2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="18dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Od"
        android:id="@+id/textView28"
        android:layout_alignTop="@+id/aut_kldS"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="h"
        android:id="@+id/textView31"
        android:layout_alignTop="@+id/textView28"
        android:layout_alignStart="@+id/textView23" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Do"
        android:id="@+id/textView32"
        android:layout_alignTop="@+id/textView28"
        android:layout_toEndOf="@+id/textView23"
        android:layout_marginLeft="-10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="h"
        android:id="@+id/textView33"
        android:layout_alignTop="@+id/textView32"
        android:layout_toEndOf="@+id/textView29" />



    <com.dmitrymalkovich.android.ProgressFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="bottom|right"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_upload"
            android:id="@+id/aut_FAB"
            android:tint="#00312424"
            app:backgroundTint="@color/colorPrimary" />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aut_FABpb"
            android:max="2"
            android:visibility="invisible" />

    </com.dmitrymalkovich.android.ProgressFloatingActionButton>




</RelativeLayout>
</android.support.design.widget.CoordinatorLayout>